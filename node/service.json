{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "events": {
    "updateMessage": {
      "sender": "vtex.messages",
      "keys": ["updateMessage"]
    }
  },
  "routes" : {
    "listenToUpdates": {
      "path": "/_v/translations/update",
      "public": true,
      "smartcache": false
    }
  }
}
