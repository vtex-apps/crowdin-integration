{
  "name": "crowdin-integration",
  "vendor": "vtex",
  "version": "0.5.0",
  "title": "Crowdin integration",
  "description": "IO-Crowdin API",
  "mustUpdateAt": "2020-07-29",
  "categories": [],
  "dependencies": {
    "vtex.messages": "1.x"
  },
  "builders": {
    "node": "4.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "httpstat.us",
        "path": "*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "graphql-query"
    },
    {
      "name": "vtex.messages:graphql-save-translation-messages"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/checkout/pub/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.crowdin.com",
        "path": "/api/project/*"
      }
    }
  ],
  "registries": [
    "smartcheckout"
  ],
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema",
  "settingsSchema": {
    "title": "Crowdin Integration",
    "type": "object",
    "properties": {
      "projectName": {
        "title": "Crowdin project name",
        "type": "string",
        "default": "experimental",
        "description": "Enter your Crowdin project to import and export translations"
      },
      "projectKey": {
        "title": "Crowdin project key",
        "type": "string",
        "description": "Enter your Crowdin project key for authentification",
        "default": "af2e938c45b8c104ab3222c6e6e4ba98"
      }
    }
  }
}
